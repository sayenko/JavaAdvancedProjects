<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ua.lviv.lgs.Item" table="item">
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>

		<property name="total" column="total" type="int" />
		
		<set name="carts" table="carts_items" inverse="false" lazy="true" fetch="select" cascade="all" >
			<key>
				<column name="item_id" not-null="true"></column>
			</key>
			<many-to-many entity-name="ua.lviv.lgs.Cart">
				<column name="cart_id" not-null="true"></column>
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>